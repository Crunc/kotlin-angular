<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>kotlin-angular-core</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.github.crunc</groupId>
        <artifactId>kotlin-angular-lib-parent</artifactId>
        <version>2.4.8-SNAPSHOT</version>
        <relativePath>../kotlin-angular-lib-parent</relativePath>
    </parent>

    <name>Kotlin Angular Core</name>
    <description>@angular/core for Kotlin</description>

    <build>
        <resources>
            <resource>
                <directory>${node_modules}/@angular/common/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>common.umd.js</include>
                    <include>common.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/compiler/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>compiler.umd.js</include>
                    <include>compiler.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/core/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>core.umd.js</include>
                    <include>core.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/forms/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>forms.umd.js</include>
                    <include>forms.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/http/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>http.umd.js</include>
                    <include>http.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/platform-browser/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>platform-browser.umd.js</include>
                    <include>platform-browser.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/platform-browser-dynamic/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>platform-browser-dynamic.umd.js</include>
                    <include>platform-browser-dynamic.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/router/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/angular</targetPath>
                <includes>
                    <include>router.umd.js</include>
                    <include>router.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/core-js/client</directory>
                <targetPath>${project.build.libOutputDirectory}/core-js</targetPath>
                <includes>
                    <include>shim.js</include>
                    <include>shim.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/rxjs/bundles</directory>
                <targetPath>${project.build.libOutputDirectory}/rxjs</targetPath>
                <includes>
                    <include>Rx.js</include>
                    <include>Rx.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/zone.js/dist</directory>
                <targetPath>${project.build.libOutputDirectory}/zone.js</targetPath>
                <includes>
                    <include>zone.js</include>
                    <include>zone.min.js</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
