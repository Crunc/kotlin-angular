<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.crunc</groupId>
    <artifactId>kotlin-angular-core</artifactId>
    <version>2.4.8-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <kotlin.version>1.1.0</kotlin.version>
        <node.version>v7.1.0</node.version>
        <node_modules>${basedir}/node_modules</node_modules>

        <project.build.js.directory>${project.build.directory}/js</project.build.js.directory>
        <project.build.js.lib.directory>${project.build.js.directory}/lib</project.build.js.lib.directory>

        <maven-clean-plugin.version>3.0.0</maven-clean-plugin.version>
        <maven-jar-plugin.version>3.0.2</maven-jar-plugin.version>
        <frontend-maven-plugin.version>1.3</frontend-maven-plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-js</artifactId>
            <version>${kotlin.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-compiler</artifactId>
            <version>${kotlin.version}</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>
        <testSourceDirectory>src/test/kotlin</testSourceDirectory>
        <resources>
            <resource>
                <directory>${node_modules}/@angular/common/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>common.umd.js</include>
                    <include>common.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/compiler/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>compiler.umd.js</include>
                    <include>compiler.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/core/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>core.umd.js</include>
                    <include>core.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/forms/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>forms.umd.js</include>
                    <include>forms.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/http/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>http.umd.js</include>
                    <include>http.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/platform-browser/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>platform-browser.umd.js</include>
                    <include>platform-browser.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/platform-browser-dynamic/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>platform-browser-dynamic.umd.js</include>
                    <include>platform-browser-dynamic.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/@angular/router/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/angular</targetPath>
                <includes>
                    <include>router.umd.js</include>
                    <include>router.umd.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/core-js/client</directory>
                <targetPath>${project.build.js.lib.directory}/core-js</targetPath>
                <includes>
                    <include>shim.js</include>
                    <include>shim.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/rxjs/bundles</directory>
                <targetPath>${project.build.js.lib.directory}/rxjs</targetPath>
                <includes>
                    <include>Rx.js</include>
                    <include>Rx.min.js</include>
                </includes>
            </resource>
            <resource>
                <directory>${node_modules}/zone.js/dist</directory>
                <targetPath>${project.build.js.lib.directory}/zone.js</targetPath>
                <includes>
                    <include>zone.js</include>
                    <include>zone.min.js</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>${maven-clean-plugin.version}</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${node_modules}</directory>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>js</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>test-js</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <moduleKind>umd</moduleKind>
                    <metaInfo>true</metaInfo>
                    <sourceMap>true</sourceMap>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>${frontend-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>install-node-and-npm</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <configuration>
                            <nodeVersion>${node.version}</nodeVersion>
                        </configuration>
                    </execution>
                    <execution>
                        <id>npm-install</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <installDirectory>${project.build.directory}</installDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
                <configuration>
                    <classesDirectory>${project.build.directory}/js</classesDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
